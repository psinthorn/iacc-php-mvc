{
    "name": "iacc/php-mvc",
    "description": "iAcc PHP MVC Application - Inventory and Accounting System",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "iAcc Team",
            "email": "admin@iacc.co.th"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-mysqli": "*",
        "ext-mbstring": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Inc\\": "inc/"
        },
        "files": [
            "inc/security.php",
            "inc/error-logger.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php -l *.php inc/*.php"
    }
}
