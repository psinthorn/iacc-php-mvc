# iACC Environment Variables Template
# 
# Copy to .env and modify for your environment

# Application
APP_NAME=iACC
APP_VERSION=1.0.0
APP_DEBUG=false
APP_ENV=production
APP_START_TIME=
APP_URL=https://api.iacc.local

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=iacc
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@iacc.local
MAIL_FROM_NAME=iACC

# File Upload Configuration
FILE_MAX_SIZE=52428800
UPLOAD_PATH=storage/uploads

# Security
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Monitoring & Logging
LOG_LEVEL=info
LOG_CHANNEL=stack
LOG_PATH=storage/logs

# Third-party Services
SENTRY_DSN=
DATADOG_API_KEY=
